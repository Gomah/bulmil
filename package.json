{
  "name": "root",
  "version": "0.0.16",
  "repository": "git@github.com:gomah/bulmil.git",
  "author": "Gomah <hi@gomah.fr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "bulmil",
    "bulma",
    "css",
    "stencil",
    "stenciljs",
    "storybook",
    "angular",
    "vue",
    "react",
    "ember",
    "vanilla",
    "ui-framework",
    "custom-elements",
    "webcomponents",
    "web-components"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:storybook": "build-storybook -c .storybook -s packages/bulmil/www -o storybook/",
    "release": "yarn run test && standard-version && git push --follow-tags && lerna publish",
    "watch": "node --max_old_space_size=4096 ./node_modules/.bin/stencil build --watch --recursive --serve --config ./packages/bulmil/stencil.config.ts",
    "storybook.run": "start-storybook -p 9006 -s packages/bulmil/www",
    "storybook": "npm-run-all --parallel watch storybook.run",
    "test": "lerna run test --stream",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-a11y": "^5.3.12",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-centered": "^5.3.12",
    "@storybook/addon-knobs": "^5.3.12",
    "@storybook/addon-notes": "^5.3.12",
    "@storybook/addon-storysource": "^5.3.12",
    "@storybook/addon-viewport": "^5.3.12",
    "@storybook/html": "^5.3.12",
    "@storybook/theming": "^5.3.12",
    "@types/node": "^13.7.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "husky": "^4.2.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "lerna": "^3.20.2"
  }
}
