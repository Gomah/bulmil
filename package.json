{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --stream",
    "build:storybook": "build-storybook -c .storybook -s packages/core/www -o storybook/",
    "release:stable": "yarn build && yarn run test && lerna publish --no-commit-hooks --dist-tag latest",
    "release:next": "yarn build && yarn run test && lerna publish prepatch --no-commit-hooks --dist-tag next",
    "watch": "node --max_old_space_size=4096 ./node_modules/.bin/stencil build --watch --recursive --serve --config ./packages/core/stencil.config.ts",
    "storybook.run": "start-storybook -p 9006 -s packages/core/www",
    "storybook": "npm-run-all --parallel watch storybook.run",
    "test": "turbo run test --stream",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-a11y": "6.4.16",
    "@storybook/addon-actions": "6.4.16",
    "@storybook/addon-centered": "^5.3.21",
    "@storybook/addon-docs": "6.4.16",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-viewport": "6.4.16",
    "@storybook/builder-webpack5": "6.4.16",
    "@storybook/html": "6.4.16",
    "@storybook/manager-webpack5": "6.4.16",
    "@storybook/theming": "6.4.16",
    "@storybook/web-components": "6.4.16",
    "@types/node": "^14.14.41",
    "babel-loader": "^8.2.3",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lit-html": "^2.1.2",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "storybook-addon-turbo-build": "^1.0.1",
    "ts-loader": "^9.2.6",
    "turbo": "^1.1.0",
    "typescript": "^4.5.2",
    "webpack": "^5.67.0"
  },
  "packageManager": "yarn@1.22.17"
}
